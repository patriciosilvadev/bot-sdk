// Send the help request 
POST http://localhost:8888/bot/message
Content-Type: application/json

{
  "language":"en",
  "event": "continue",
  "message": {
      "code": "message",
      "type": "text",
      "body": "help"
  },
  "settings": {
    "engine": {
      "type": "custom",
      "settings": {
          "myToken": "super_secret_token",
          "anotherSetting": "123"
      }
    }
  }
}

